<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Node JS APP</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<div class="app">
    <div class="app__header">
        <% if (weather) { %>
        <h1><%= weather %></h1>
        <% } %>
        <% if (error) { %>
        <p class="error"><%= error %></p>
        <% } %>
    </div>
    <form action="/" method="POST" class="app__content">
        <div class="input">
            <label for="city">City</label>
            <input type="text" id="city" placeholder="City's name" name="city">
        </div>
        <button type="submit" class="btn">Weather</button>
    </form>
</div>
<div id="openweathermap-widget-15"></div>
<script>window.myWidgetParam ? window.myWidgetParam : window.myWidgetParam = [];
    window.myWidgetParam.push({
        id: 15,
        cityid: '649360',
        appid: '9d20b928e78bbe90cae73e10e39c8966',
        units: 'metric',
        containerid: 'openweathermap-widget-15',
    });
    (function () {
        var script = document.createElement('script');
        script.async = true;
        script.charset = "utf-8";
        script.src = "//openweathermap.org/themes/openweathermap/assets/vendor/owm/js/weather-widget-generator.js";
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(script, s);
    })();</script>
</body>
</html>